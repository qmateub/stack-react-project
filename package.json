{
  "name": "wp-app",
  "version": "1.0.0",
  "description": "A test app with webpack",
  "main": "index.js",
  "scripts": {
    "start": "npm run build",
    "build":
      "webpack -d && cp src/index.html dist/index.html && webpack-dev-server --content-base src/ --inline --hot",
    "build:prod": "webpack -p && cp src/index.html dist/index.html",
    "test": "webpack",
    "lint": "./node_modules/.bin/eslint src",
    "lint-fixup": "./node_modules/.bin/eslint src/app --ext .js,.jsx --fix",
    "commitmsg": "validate-commit-msg",
    "heroku-postbuild":
      "webpack -p --config ./prod.webpack.config.js --progress"
  },
  "pre-commit": ["test"],
  "keywords": ["react", "webpack", "eslint"],
  "author": "Quique Mateu",
  "license": "ISC",
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.1",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.14.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-react": "^7.5.1",
    "husky": "^0.14.3",
    "pre-commit": "^1.2.2",
    "validate-commit-msg": "^2.14.0",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.7"
  },
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": ["feat", "fix", "refactor"],
      "warnOnFail": true,
      "maxSubjectLength": 100,
      "subjectPattern": "^[A-Z]+-[0-9]+ - .*",
      "subjectPatternErrorMsg":
        "Subject must be in format 'CMS-123 - Commit message'",
      "helpMessage": ""
    }
  }
}
